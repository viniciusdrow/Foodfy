
{% extends "layout.njk"%}

{% block head %}
  <title> Recipes - Foodfy </title>
{% endblock %}


{% block content %}

  {% for item in items %}
  <div class="recipe" id="{{item.id}}">
    <div>
        <img src="{{item.image}}" alt="Imagem de {{item.title}}">
    </div>

    <div>
        <h1>{{item.title}}</h1>
        <p>{{item.author}}</p>
    </div>

  </div>
  {% endfor %}

  




{% endblock %}