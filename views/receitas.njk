{% extends "layout.njk" %}

{% block head %}
  <title> Receitas - Foodfy </title>
{% endblock %}

{% block content %}

<section class="cards">

    {% for item in items %}
    <div class="card" id="{{item.id}}">
        <img src="{{item.image}}" alt="Imagem de {{item.title}}">
        <h2>{{item.title}}</h2>
        <p>{{item.author}}</p>
    </div>
    {% endfor  %}
    
</section>








<div class="modal-overlay">
        <div class="modal">
            <a class="close-modal">Fechar modal</a>

            <div class="modal-content">
                <img src="" alt="">
                <h2></h2>
                <p></p>
            </div>
        </div>
</div>



<script src="scripts.js"></script>

{% endblock%}